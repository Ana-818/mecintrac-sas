---
import Layout from "@/layouts/Layout.astro"
import AboutUsData from "@/data/aboutUs.json"
import { Image } from "astro:assets"
const teamImage = import.meta.glob('/src/assets/images/about/*.{jpg,png,jpeg,webp}', { eager: true }) as Record<string, { default: string }>;
---
<Layout title="Nosotros">
  <div class="section-container mt-16 flex flex-col">
    <h1 class="text-5xl font-bold tracking-wider text-blue text-center">Nosotros</h1>
    <div class="flex flex-col lg:flex-row-reverse gap-10 mt-8 justify-center items-center lg:items-start">
        <div class="flex flex-col lg:flex-row-reverse gap-10 lg:bg-white lg:p-5 lg:rounded-lg">
            <p class="text-lg text-justify max-w-xl">{AboutUsData.text}</p>
            <Image src={teamImage[AboutUsData.image].default} alt="Equipo Mecintrac" width={700} inferSize class="w-full max-w-lg max-h-[400px] rounded-lg" />
        </div>
    </div>
    <div class="flex flex-col lg:flex-row justify-center items-center lg:items-start gap-4 lg:gap-20 mt-10">
        <div class="flex flex-col gap-4 rounded-lg p-4 max-w-lg bg-about-blue">
            <h2 class="text-2xl font-bold tracking-widest text-white text-center">Misión</h2>
            <p class="text-lg text-justify text-white">{AboutUsData.mission}</p>
        </div>
        <div class="flex flex-col gap-4 rounded-lg p-4 max-w-lg bg-about-blue">
            <h2 class="text-2xl font-bold tracking-widest text-white text-center">Visión</h2>
            <p class="text-lg text-justify text-white">{AboutUsData.vision}</p>    
        </div>

    </div>
  </div>
</Layout>